<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:background="@android:color/black"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvMovieTitle"
            android:id="@+id/imgMovie"
            tools:src="@tools:sample/backgrounds/scenic"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

    <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvMovieGenre"
            android:textColor="@android:color/white"
            android:id="@+id/tvMovieTitle"
            android:layout_width="match_parent"
            tools:text="Title"
            android:layout_height="0dp"/>

    <TextView
            app:layout_constraintBottom_toTopOf="@id/tvMovieVotes"
            android:textColor="@android:color/white"
            android:id="@+id/tvMovieGenre"
            android:layout_width="match_parent"
            tools:text="Genre"
            android:layout_height="0dp"/>

    <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@android:color/white"
            android:id="@+id/tvMovieVotes"
            android:layout_width="wrap_content"
            tools:text="8"
            android:layout_height="0dp"/>

    <ImageView
            app:layout_constraintTop_toTopOf="@id/tvMovieVotes"
            android:src="@android:drawable/star_big_on"
            app:layout_constraintStart_toEndOf="@id/tvMovieVotes"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="16dp"
            android:layout_height="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>